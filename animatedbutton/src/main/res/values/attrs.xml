<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AnimatedButton">
        <attr name="backgroundColor" format="color" />
<!--        <attr name="background" format="reference|color" />-->
        <attr name="backgroundResource" format="reference" />
        <attr name="indicatorColor" format="color" />
        <attr name="doneIconTintColor" format="color" />
        <attr name="errorIconTintColor" format="color" />
        <attr name="animationDuration" format="integer" />
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="textColor" format="color" />
        <attr name="errorIcon" format="reference" />
        <attr name="doneIcon" format="reference" />
        <attr name="returnToNormalAfterError" format="boolean" />
    </declare-styleable>
</resources>
