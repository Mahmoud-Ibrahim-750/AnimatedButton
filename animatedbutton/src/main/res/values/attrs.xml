<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AnimatedButton">
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="indicatorColor" format="color" />
        <attr name="successIcon" format="reference" />
        <attr name="failureIcon" format="reference" />
        <attr name="successIconTint" format="color" />
        <attr name="failureIconTint" format="color" />

        <attr name="animationDuration" format="integer" />
        <attr name="autoLoading" format="boolean" />
    </declare-styleable>
</resources>
